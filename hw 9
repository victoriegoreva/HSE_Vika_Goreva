import random
import time

def generate_large_sorted_array(start, end):
    step = random.randint(3, 5)
    array = list(range(start, end, step))
    return array

array_large = generate_large_sorted_array(10, 250_000_000)
print(f"Первый и последний элемент массива: {array_large[0]}, {array_large[-1]}")

random_numbers = [random.randint(10, 250_000_000) for _ in range(10)]
print("Случайные числа:", random_numbers)

def linear_search(arr, target):
    for index, value in enumerate(arr):
        if value == target:
            return index
    return -1

  def binary_search(arr, target):
    left, right = 0, len(arr) - 1
    while left <= right:
        mid = (left + right) // 2
        if arr[mid] == target:
            return mid
        elif arr[mid] < target:
            left = mid + 1
        else:
            right = mid - 1
    return -1

  
  for num in random_numbers:
    start_time = time.time()
    index_linear = linear_search(array_large, num)
    time_linear = time.time() - start_time
    
    start_time = time.time()
    index_binary = binary_search(array_large, num)
    time_binary = time.time() - start_time
    
    print(f"\nЧисло: {num}")
    if index_linear != -1:
        print(f"Линейный поиск: {index_linear} (время: {time_linear:.6f} сек)")
    else:
        print(f"Линейный поиск: число не найдено (время: {time_linear:.6f} сек)")
    
    if index_binary != -1:
        print(f"Бинарный поиск: {index_binary} (время: {time_binary:.6f} сек)")
    else:
        print(f"Бинарный поиск: число не найдено (время: {time_binary:.6f} сек)")
